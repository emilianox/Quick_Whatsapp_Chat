{
  "manifest_version": 2,
  "name": "Quick Whatsapp Chat",
  "version": "2.0.4",

  "icons": {
    "16": "assets/icons/favicon-16.png",
    "32": "assets/icons/favicon-32.png",
    "48": "assets/icons/favicon-48.png",
    "128": "assets/icons/favicon-128.png"
  },
  "description": "Start chat without adding number to contacts.",
  "homepage_url": "https://github.com/emilianox/Quick_Whatsapp_Chat",
  "short_name": "Quick Whatsapp Chat",

  "permissions": [
    "storage"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'",

  "__chrome|firefox__author": "emilianox",
  "__opera__developer": {
    "name": "emilianox"
  },

  "__firefox__applications": {
    "gecko": {
      "id": "quick_whatsapp_chat@emilianox.github"
    }
  },

  "__chrome__minimum_chrome_version": "49",
  "__opera__minimum_opera_version": "36",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/favicon-16.png",
      "32": "assets/icons/favicon-32.png",
      "48": "assets/icons/favicon-48.png",
      "128": "assets/icons/favicon-128.png"
    },
    "default_title": "Quick Whatsapp Chat",
    "__chrome|opera__chrome_style": false,
    "__firefox__browser_style": false
  }
}